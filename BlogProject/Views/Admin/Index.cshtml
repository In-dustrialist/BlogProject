@model IEnumerable<BlogProject.Models.Role>

<h2>Список ролей</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название роли</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>@role.Description</td>
                <td>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreateRole", "Admin")" class="btn btn-primary">Добавить роль</a>
