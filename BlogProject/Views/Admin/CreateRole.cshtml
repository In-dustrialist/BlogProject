@model BlogProject.Models.CreateRoleViewModel

@{
    ViewData["Title"] = "Добавить роль";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="CreateRole">
    <div class="form-group">
        <label for="Name">Название роли</label>
        <input type="text" class="form-control" id="Name" name="Name" required />
    </div>

    <div class="form-group">
        <label for="Description">Описание роли</label>
        <textarea class="form-control" id="Description" name="Description" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Добавить роль</button>
</form>

<a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mt-3">Назад</a>
