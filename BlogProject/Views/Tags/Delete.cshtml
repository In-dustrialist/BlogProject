@model BlogProject.Models.Tag

<h1>Подтвердить удаление тега</h1>

<p>Вы уверены, что хотите удалить тег: <strong>@Model.Name</strong>?</p>

<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a href="@Url.Action("Index", "Tags")" class="btn btn-secondary">Отменить</a>
</form>
